<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" >
  <head>
    <title>Sassij Engine Tests</title>    
    <script language="javascript" src="jquery-1.3.1.min.js" type="text/javascript"></script>
    <script language="javascript" src="testrunner.js" type="text/javascript"></script>
    <script language="javascript" src="testnavigation.js" type="text/javascript"></script>
    <link media="screen" href="testsuite.css" type="text/css" rel="stylesheet"/>    

    <script language="javascript" src="../lib/sassij.js" type="text/javascript"></script>
    <script language="javascript" src="../lib/shared.js" type="text/javascript"></script>
  </head>
  <body>
    <script language="javascript" type="text/javascript">

  module( "Hamlij Shared Tests");
  sassij = new Sassij();
  
  test( "human_indentation() should say the indention type plus ' was' or nothing if no tab or space", function(){
    equals( sassij.shared.human_indentation( " ", false ), "1 space" );
    equals( sassij.shared.human_indentation( "\t", true ), "1 tab was" );
    equals( sassij.shared.human_indentation( "\t  ", true ), "'\t  ' was" );
  });
  
  test( "human_indentation() should match the verb case with the length of spaces", function(){
    equals( sassij.shared.human_indentation( "  ", true ), "2 spaces were" );
    equals( sassij.shared.human_indentation( "\t\t", true ), "2 tabs were" );
  });
  
  test( "String helper toCamelCase()", function(){
    equals( "camel case".toCamelCase(), "CamelCase" );
    equals( "camEl_ Case ".toCamelCase(), "CamElCase" );
  });
  


    </script>

    <h1>Shared Tests</h1>
    <h2 id="banner">
      <select id='test_select'></select>
    </h2>
    <ol id="tests"></ol>
    <div id="results"></div>
    <div id="main"></div>        

  </body>
</html>
